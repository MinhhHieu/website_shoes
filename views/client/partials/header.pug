include ../mixins/sub-menu.pug

header.header 
  .container
    .col-3 
      .inner-logo  
        a(href="/")
          img(src="/images/logo.png", alt="Logo") 

    .col-5 
      form(
        action="/search"
        method="GET"
        )
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khoá"
              class="form-control form-css"
              name="keyword"
              value=keyword
            )
            button(
              type="submit"
              class="btn btn-primary"
            ) Tìm kiếm

    .col-9 
      .inner-menu 
        ul 
          li 
            a(href="/") Trang chủ
          li(class="sub-menu")
            -const pathProduct = "/products"
            a(href="/products") Sản phẩm 
              +sub-menu(layoutProductCategory, pathProduct)
          li
            a(href="/cart") Giỏ hàng(#{miniCart ? miniCart.totalQuantity : 0})
            
          if(user)
            li(class="user-info") 
              a(href="/user/info" style="color: red") #{user.fullName}
              ul(class="submenu")
                li(class="logout-container")
                  a(href="/user/logout") Đăng xuất
          else
            li 
              a(href="/user/login") Đăng nhập
               
            