extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  +alert-success(1500)
  +alert-error(2000)
  
  .container.my-2
    .row.justify-content-center 
      .col-8
          h2(class="mb-4" style="text-align: center") Nhập mã OTP
          form(
            action=`/user/password/otp`
            method="POST"
          )
            div(class="form-group")
              label(for="email") Email 
              input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                value=email
                readonly 
                )

            div(class="form-group")
              label(for="otp") Mã OTP 
              input(
                type="text"
                class="form-control"
                id="otp"
                name="otp"
                )

            div(class="form-group")
              button(
                type="submit"
                class="btn btn-success btn-block"
              ) Xác nhận

          
              