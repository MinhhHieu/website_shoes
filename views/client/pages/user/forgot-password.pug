extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  +alert-success(1500)
  +alert-error(2000)
  
  .container.my-2
    .row.justify-content-center 
      .col-8
          h2(class="mb-4" style="text-align: center") Lấy lại mật khẩu
          form(
            action=`/user/password/forgot`
            method="POST"
          )

            div(class="form-group")
              label(for="email") Email 
              input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="Nhập email"
                )

            div(class="form-group")
              button(
                type="submit"
                class="btn btn-success btn-block"
              ) Gửi mail xác nhận

          
              