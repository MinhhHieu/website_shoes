extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
  +alert-success(2000)
  .container.my-3
    .row 
      .col-12 
        +box-head("Kết quả tìm kiếm")
  .container.my-5
    .row 
    each item in products 
      .col-4.mb-3 
        .product-item 
          a(href=`/products/detail/${item.slug}`)
            .inner-image 
              img(
                src=item.thumbnail, 
                alt=item.title 
              )
              if(item.featured == "1")
                .inner-featured Nổi bật
            .inner-content 
              h3.inner-title #{item.title}
              .inner-price-new #{item.priceNew}$
              .inner-price-old #{item.price}$
              .inner-discount -#{item.discountPercentage}%